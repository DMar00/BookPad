<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID"
         version="4.0"
>
  <display-name>BookPad</display-name>

  <welcome-file-list>
    <welcome-file>Home</welcome-file>
  </welcome-file-list>

  <resource-ref><!-- Per usare JNDI -->
    <description>DB Connection - JNDI reference to a data source</description>
    <res-ref-name>jdbc/bookpad</res-ref-name><!-- jdbc/nome_database -->
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <error-page>
    <error-code>404</error-code>
    <location>/error-page-404.jsp</location>
  </error-page>

</web-app>
